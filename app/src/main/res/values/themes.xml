<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SmartFoodExchange" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange_dark</item>
        <item name="colorPrimaryVariant">@color/green_dark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange_700</item>
        <item name="colorSecondaryVariant">@color/orange_light</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/aestetico_medium</item>
    </style>

    <style name="Theme.auth" parent="Theme.AppCompat.NoActionBar">
        <!-- App Theme Colors -->
        <item name="colorSecondary">@color/orange_700</item>
        <item name="colorSecondaryVariant">@color/orange_light</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/comicz</item>
    </style>
    <style name="Theme.white" parent="Theme.AppCompat.NoActionBar">
        <!-- App Theme Colors -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorSecondary">@color/green_500</item>
        <item name="android:fontFamily">@font/comicz</item>
    </style>

    <style name="Theme.custom_button" parent="Theme.AppCompat.NoActionBar">
        <!-- App Theme Colors -->
        <item name="colorPrimary">@color/white_blue</item>
        <item name="colorSecondary">@color/green_500</item>
        <item name="android:fontFamily">@font/comicz</item>
    </style>
    <style name="Custom_Dialog" parent="Theme.AppCompat.Light.Dialog.Alert">

        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>

    <style name="StyleRippleDefault">
        <item name="mrl_rippleOverlay">true</item>
        <item name="mrl_rippleColor">@color/rippleColor</item>
        <item name="mrl_rippleDuration">350</item>
        <item name="mrl_rippleFadeDuration">75</item>
    </style>

    <style name="StyleRippleCircle" parent="StyleRippleDefault">
        <item name="mrl_rippleRoundedCorners">48dp</item>
    </style>

    <style name="MyTimePickerTheme" parent="Theme.AppCompat.Light.Dialog">
        <!--        <item name="android:timePickerMode">clock</item>-->
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textColorSecondary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorPrimary</item>
    </style>

    <style name="MyDatePicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textColorSecondary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorPrimary</item>
    </style>


</resources>